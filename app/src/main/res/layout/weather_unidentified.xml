<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/end_text_bg"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="32dp">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Выбрать"
        android:textColor="@color/primary_text"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/choose_city"
        app:layout_constraintStart_toStartOf="@+id/choose_city"
        app:layout_constraintTop_toBottomOf="@+id/choose_city" />

    <ImageView
        android:id="@+id/choose_city"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/weather_enidified" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Вы не выбрали город"
        android:textColor="@color/primary_text"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/choose_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>